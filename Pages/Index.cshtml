<script src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@4/dist/email.min.js"></script>
<script>
    document.getElementById("contact-form").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent the default form submission

        let lastSent = localStorage.getItem("lastSentTime");
        let now = new Date().getTime();
        let dayInSeconds =  86400 * 1000;

        if (lastSent && now - lastSent < dayInSeconds) {
            document.getElementById("status").innerText = "You can only send one email per day.";
            return;
        }

        (function(){
            emailjs.init({
                publicKey: "rqhJZqYYKCC-W10nM",
            });
        })();

        emailjs.sendForm('service_p2ddn37', 'template_nfpq7sr', this)
        .then(
        function(response) {
            document.getElementById("status").innerText = "Message sent successfully!";

            // Save timestamp only if the email is successfully sent
            localStorage.setItem("lastSentTime", now);
        },
        function(error) {
            document.getElementById("status").innerText = "Error sending message. Try again.";
        }
        );
    });
</script>

 